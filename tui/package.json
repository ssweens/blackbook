{
  "name": "@ssweens/blackbook",
  "version": "0.7.0",
  "description": "Plugin manager for AI coding tools",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ssweens/blackbook.git"
  },
  "bugs": {
    "url": "https://github.com/ssweens/blackbook/issues"
  },
  "homepage": "https://github.com/ssweens/blackbook#readme",
  "keywords": [
    "claude",
    "codex",
    "opencode",
    "amp",
    "plugins",
    "ai",
    "cli",
    "tui"
  ],
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "blackbook": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "tsx src/cli.tsx",
    "build": "tsc",
    "start": "node dist/cli.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "build:bin": "bun build src/cli.tsx --compile --outfile bin/blackbook",
    "build:bin:all": "bun build src/cli.tsx --compile --target=bun-darwin-arm64 --outfile bin/blackbook-darwin-arm64 && bun build src/cli.tsx --compile --target=bun-darwin-x64 --outfile bin/blackbook-darwin-x64 && bun build src/cli.tsx --compile --target=bun-linux-x64 --outfile bin/blackbook-linux-x64"
  },
  "dependencies": {
    "diff": "^8.0.3",
    "fast-glob": "^3.3.3",
    "ink": "^5.2.0",
    "ink-select-input": "^6.0.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "react": "^18.3.1",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@types/node": "^22.15.21",
    "@types/react": "^18.3.20",
    "ink-testing-library": "^4.0.0",
    "react-devtools-core": "^7.0.1",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^4.0.18"
  }
}
